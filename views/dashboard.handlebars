<!-- New Entry Form -->
<section class="card" style="width: 50%;">
  <h2 class="formHeader">NEW DIARY ENTRY</h2>
  <br>
  <div class="form-group">
    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name your entry">
  </div>
  <div class="form-group">
    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="date">
  </div>
  <div class="form-group">
    <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="how was your day?" rows="10"></textarea>
  </div>
  <div class="form-group">
    <label for="exampleFormControlFile1">Do you want to attach an image?</label>
    <input type="file" class="form-control-file" id="exampleFormControlFile1">
  </div>
</section>

<!-- Post Container -->
<section class="card" align="center" style="width: 50%;">
  <h2 class="formHeader">MY DIARY ENTRIES</h2>
  <br>
  {{#each posts as |post| }}
  <div id="card-header">
    <a href="/api/post/{{post.id}}">{{post.title}}</a>
  </div>
  <div class="card-body">
    <p>Created on {{post.date}}</p>
  </div>
  {{/each}}
</section>

  <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Select the date</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            
            <input type="date" class="form-control py-4 text-center" placeholder="Start journaling...">
            <input type="Title" class="form-control py-4 text-center" placeholder="Title">
          </div>
          <div class="modal-body">
            <form>
              <div class="form-group">

                <input type="date" class="form-control py-4 text-center" placeholder="Start journaling...">
              </div>
              <div class="form-group">

                <textarea class="form-control py-4 text-center" placeholder="Start journaling"></textarea>
              </div>
            </form>
          </div>
          <div class="modal-footer">

            <button type="button" class="btn btn-danger btn-block py-2 mb-3">Submit</button>
          </div>
        </div>
      </div>
    </div>

