  <!-- Loop over each object in the projects array -->
{{#each posts as |entry| }}
<div class="row mb-4">
  <div class="col-md-5">
    <h2>
      <a href="/entry/:id{{post.id}}">{{entry.title}}</a>
    </h2>
    <p>Created on {{format_date entry.date}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}
  
