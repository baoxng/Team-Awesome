      <div class="modal-body" id="modal">
        <form>
          <div class="form-group">
            
            <input type="date" class="form-control py-4 text-center" placeholder="Start journaling...">
            <input type="Title" class="form-control py-4 text-center" placeholder="Please enter title">
          </div>
         <div class="form-group">
            
            <textarea class="form-control py-4 text-center" placeholder="Start journaling"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        
        <button type="button" id="modalBtn" class="btn btn-danger btn-block py-2 mb-3">Submit</button>
